<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="12dp"
    app:cardCornerRadius="8dp"
    android:layout_marginBottom="2dp"
    android:layout_marginTop="4dp"
    android:padding="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/vendor_orders_product_image"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="@drawable/add_image_icon"
            android:layout_margin="12dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/vendor_orders_product_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text= "Product Name"
                android:textSize="22sp"
                android:padding="12dp"
                android:layout_margin="6dp"
                android:background="@drawable/black_border_3dp"
                android:textAlignment="center"
                />

            <TextView
                android:id="@+id/vendor_orders_product_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text= "Product Price"
                android:textSize="18sp"
                android:padding="12dp"
                android:layout_margin="6dp"
                android:background="@drawable/black_border_3dp"
                android:textAlignment="center"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="6dp"
                android:background="@drawable/black_border_3dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text= "Quantity"
                    android:textSize="18sp"
                    android:padding="12dp"
                    />

                <TextView
                    android:id="@+id/vendor_orders_product_quantity"
                    android:layout_width="0dp"
                    android:layout_gravity="end"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text= "0"
                    android:textAlignment="viewEnd"
                    android:paddingStart="10dp"
                    android:paddingTop="7dp"
                    android:paddingEnd="33dp"
                    android:paddingBottom="7dp"
                    android:textSize="25sp"
                    />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>