<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:padding="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="4dp"
        android:padding="2dp">

        <TextView
            android:id="@+id/search_view_business_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Business Name"
            android:textSize="22sp"
            android:textStyle="bold"
            android:gravity="center"
            android:padding="3dp"
            android:layout_margin="5dp"
            android:background="@drawable/black_border_3dp"/>
        <TextView
            android:id="@+id/search_view_product_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Product"
            android:textSize="18sp"
            android:gravity="center"
            android:padding="3dp"
            android:layout_margin="5dp"
            android:background="@drawable/black_border_3dp"/>
        <TextView
            android:id="@+id/search_view_product_short_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Short Description"
            android:textSize="18sp"
            android:gravity="center"
            android:padding="3dp"
            android:layout_margin="5dp"
            android:background="@drawable/black_border_3dp"/>

        <TextView
            android:id="@+id/search_view_product_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Price"
            android:textSize="18sp"
            android:gravity="center"
            android:padding="3dp"
            android:layout_margin="5dp"
            android:background="@drawable/black_border_3dp"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/black"/>
</androidx.cardview.widget.CardView>